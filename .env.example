# ============================================
# Dating Bot Platform - Environment Variables
# ============================================

# ============ GITHUB ============
GITHUB_REPO=your-username/dating-bot

# ============ BEGET POSTGRESQL ============
BEGET_DB_HOST=your-db.beget.tech
BEGET_DB_NAME=datingbot
BEGET_DB_USER=datingbot_user
BEGET_DB_PASSWORD=your_password_from_beget

# ============ BEGET S3 ============
BEGET_S3_ENDPOINT=https://s3.beget.com
BEGET_S3_ACCESS_KEY=your_access_key
BEGET_S3_SECRET_KEY=your_secret_key
BEGET_S3_BUCKET=datingbot-sessions

# ============ REDIS ============
REDIS_PASSWORD=generate_strong_password_here

# ============ БЕЗОПАСНОСТЬ ============
# Сгенерируйте: openssl rand -base64 64
JWT_SECRET=generate_64_char_secret_here

# ============ WORKER ============
MAX_BROWSERS=8
WORKER_ID=worker-1
# IP основного сервера (для дополнительных worker нод)
MAIN_SERVER_IP=

# ============ МОНИТОРИНГ ============
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_me

# ============ TELEGRAM АЛЕРТЫ ============
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ============ AI (опционально) ============
ANTHROPIC_API_KEY=

# ============ VK ============
VK_APP_ID=
